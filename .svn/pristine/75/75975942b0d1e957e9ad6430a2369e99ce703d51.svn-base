<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:p="http://primefaces.org/ui"
      xmlns:composite="http://java.sun.com/jsf/composite">

<composite:interface>
    <composite:attribute name="inputValue"/>
    <composite:attribute name="submitButtonText"/>
    <composite:attribute name="currentPage"/>
    <composite:attribute name="thisPage"
                         method-signature="java.lang.String action()"/>
    <composite:attribute name="backButtonAction"
                         method-signature="java.lang.String action()"/>
    <composite:attribute name="createButtonAction"
                         method-signature="java.lang.String action()"/>
    <composite:attribute name="saveButtonAction"
                         method-signature="java.lang.String action()"/>
    <composite:attribute name="editButtonAction"
                         method-signature="java.lang.String action()"/>
    <composite:attribute name="deleteButtonAction"
                         method-signature="java.lang.String action()"/>
    <composite:attribute name="searchButtonAction"
                         method-signature="java.lang.String action()"/>

</composite:interface>

<composite:implementation>
    <h:form id="menuForm">
        <p:growl id="messages"/>
        <p:menubar>
            <p:menuitem value="HOME"  update="messages"/>
            <p:menuitem value="Магазин" action="#{uiController.goShop()}" update="messages"/>
            <!--<p:menuitem value="Предложения" action="#{uiController.goProposal}" update="messages"/>
            <p:menuitem value="Заказы" action="#{uiController.goOrders()}" update="messages" />
            <p:menuitem value="Товары" action="#{uiController.goItems}" update="messages"/>
            <p:menuitem value="Пользователи" action="#{uiController.goUsers}" update="messages"/>
            <p:menuitem value="Клиенты" action="#{uiController.goCustomers}" update="messages"/>
            <p:menuitem value="Бонусы" action="#{uiController.goBonus}" update="messages" />
            <p:menuitem value="Настройки компании" action="#{uiController.goCompany}" update="messages" />-->

            <p:menuitem value="Личный кабинет" action="#{uiController.goPersonalAccount}" update="messages" />
            <p:menuitem style="width: 1500px"/>
            <p:menuitem value="Вход" action="#{uiController.changeAdmin()}" update="@form" />
        </p:menubar>

        <div id="label" class="ui-form-label">
         <h:outputText value="#{cc.attrs.inputValue}"/>
        </div>

        <p:tabMenu activeIndex="0">

            <p:menuitem value="Товары" url="/faces/items.xhtml" rendered="#{uiController.admin}"/>
            <p:menuitem value="Заказы"  url="/faces/orders.xhtml" rendered="#{uiController.admin}" />
            <p:menuitem value="Предложения" url="/faces/proposal.xhtml" rendered="#{uiController.admin}"/>
            <p:menuitem value="Клиенты" url="/faces/customers.xhtml" rendered="#{uiController.admin}"/>
            <p:menuitem value="Пользователи" action="#{uiController.goUsers}"  rendered="#{uiController.admin}" update="@form"/>
            <p:menuitem value="Бонусы" url="/faces/bonus.xhtml" rendered="#{uiController.admin}"/>
            <p:menuitem value="Компания" url="/faces/company.xhtml" rendered="#{uiController.admin}"/>
            <p:menuitem value="Карусель" action="#{uiController.goCarousel()}"  rendered="#{uiController.admin}" update="@form"/>
            <p:menuitem value="Классификатор" action="#{uiController.goCategories()}"  rendered="#{uiController.admin}" update="@form"/>
            <p:menuitem value="Мои заказы" url="/faces/myorders.xhtml"/>
            <p:menuitem value="Личные данные"  url="/faces/myinfo.xhtml"/>
            <p:menuitem value="Профили доставок" url="/faces/mydelivery.xhtml"/>
            <p:menuitem value="История" url="/faces/myhistory.xhtml"/>


        </p:tabMenu>



        <h:panelGrid columns="7"  border="0"
                     cellpadding="0" cellspacing="0" style="border: 10px"
                     rendered="#{uiController.admin and cc.attrs.currentPage != 'shop.xhtml'
                                                    and cc.attrs.currentPage != 'users.xhtml'
                                                    and cc.attrs.currentPage != 'personal.xhtml'
                                                    }">

            <h:column>
                <p:commandButton value=""
                                 update="messages, table"
                                 action="#{uiController.back}"
                                 ajax="false"
                                 styleClass="m-btn-metro m-btn-small m-light-blue m-icon-back"
                        />
            </h:column>
            <h:column>
                <p:commandButton value="Создать #{cc.attrs.submitButtonText}"
                                 update="messages, table"
                                 action="#{cc.attrs.createButtonAction}"
                                 ajax="false"
                                 styleClass="m-btn-metro m-btn-small m-light-blue m-icon-create"
                        />
            </h:column>
            <h:column>
                <p:commandButton value="Изменить"
                                 update="messages, table, form"
                                 action="#{cc.attrs.editButtonAction}"
                                 ajax="false"
                                 styleClass="m-btn-metro m-btn-small m-light-blue m-icon-edit"
                        />
                <p:commandButton value="Сохранить"
                                 update="@form"
                                 prependId="true"
                                 action="#{cc.attrs.saveButtonAction}"
                                 rendered="false"
                                 styleClass="m-btn-metro m-btn-small m-light-blue m-icon-save"
                        />
            </h:column>
            <h:column>
                <p:commandButton value="Удалить"
                                 update="messages, table"
                                 action="#{cc.attrs.deleteButtonAction}"
                                 ajax="false"
                                 styleClass="m-btn-metro m-btn-small m-light-blue m-icon-remove"
                        />
            </h:column>
            <h:column>
                <p:commandButton value="Найти"
                                 update="messages, table"
                                 action="#{cc.attrs.searchButtonAction}"
                                 ajax="false"
                                 styleClass="m-btn-metro m-btn-small m-light-blue m-icon-find"
                        />
            </h:column>
            <h:column>
                <p:spacer width="10" height="10" />



            </h:column>

            <h:column rendered="false">
                <p:spacer width="100" height="10" />
                <p:commandButton value="Color"
                                 update="messages, table, @form"
                                 action="#{uiController.buildRandomColor()}"
                                 ajax="false"
                                 styleClass="m-btn-metro m-btn-small m-light-blue"
                        />
            </h:column>
        </h:panelGrid>

    </h:form>

</composite:implementation>

</html>